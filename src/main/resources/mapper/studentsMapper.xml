    <update id="updateById" parameterType="com.yifan.cms.demo.entity.Student">
        UPDATE students SET
        <if test="name != null" >name = #{name,jdbcType=VARCHAR},</if>
        <if test="number != null" >number = #{number,jdbcType=VARCHAR},</if>
